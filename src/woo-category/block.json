{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "woo-builder/woo-category",
	"version": "0.1.0",
	"title": "WooCommerce Product Category",
	"category": "woo-builder",
	"icon": "sos",
	"description": "WooCommerce Category Listings.",
	"example": {},
	"supports": {
		"html": false
	},
	"attributes": {
		"layoutStyle": {
			"type": "string",
			"default": "grid",
			"enum": ["grid", "list", "carousel"],
			"source": "attribute"
		},
		"columns": {
			"type": "number",
			"default": 3,
			"minimum": 1,
			"maximum": 6
		},
		"categoriesToShow": {
			"type": "number",
			"default": 9,
			"description": "The maximum number of categories to display (corresponds to per_page in API)."
		},
		"selectedCategories": {
			"type": "array",
			"default": [],
			"description": "Array of category IDs to specifically include."
		},
		"excludeCategories": {
			"type": "array",
			"default": [],
			"description": "Array of category IDs to exclude."
		},
		"parentFilter": {
			"type": "string",
			"default": "all",
			"enum": ["all", "top-level", "sub-categories"],
			"description": "Filter by parent relationship (e.g., show only categories where parent: 0)."
		},
		"orderBy": {
			"type": "string",
			"default": "name",
			"enum": ["name", "count", "id"],
			"description": "Field to sort the categories by."
		},
		"order": {
			"type": "string",
			"default": "asc",
			"enum": ["asc", "desc"],
			"description": "Sort order (Ascending or Descending)."
		},
		"showImage": {
			"type": "boolean",
			"default": true
		},
		"showCount": {
			"type": "boolean",
			"default": true,
			"description": "Show the product count for the category."
		},
		"showDescription": {
			"type": "boolean",
			"default": false
		},
		"imageSize": {
			"type": "string",
			"default": "thumbnail",
			"enum": ["full", "medium", "thumbnail", "woocommerce_single"]
		},
		"placeholderBehavior": {
			"type": "string",
			"default": "default_icon"
		},
		"customPlaceholderUrl": {
			"type": "string",
			"default": null
		},
		"paginationType": {
			"type": "string",
			"default": "loadmore",
			"enum": ["loadmore", "number", "infinite"]
		},
		"scrollThreshold": {
			"type": "number",
			"default": 100,
			"minimum": 0
		}
	},
	"textdomain": "mh-dynamic-block",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php",
	"viewScript": "file:./view.js"
}
